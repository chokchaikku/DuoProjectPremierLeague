<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreEdit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/edit_rank"
                android:layout_marginTop="10dp"
                android:hint="ทีมที่แข่ง"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_club"
                android:layout_marginTop="10dp"
                android:hint="ทีมที่แข่ง"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_fight"
                android:layout_marginTop="10dp"
                android:hint="ทีมที่แข่ง"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_win"
                android:layout_marginTop="10dp"
                android:hint="ทีมที่แข่ง"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_ever"
                android:layout_marginTop="10dp"
                android:hint="ทีมที่แข่ง"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_lose"
                android:layout_marginTop="10dp"
                android:hint="เวลา"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_total"
                android:layout_marginTop="10dp"
                android:hint="ทีมที่แข่ง"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/btn_postScore"
                android:textSize="25sp"

                android:padding="20dp"
                android:layout_gravity="center"
                android:text="Edit"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>